@if (Model.Header != null)
{
    <div class="card bg-light mb-3">
        <div class="card-body">
            @await DisplayAsync(Model.Header)
        </div>
    </div>
}

@if (Model.Navigation != null)
{
    <nav class="navbar navbar-expand-lg navbar-light bg-light border mb-3 rounded-1">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#profileNavigation" aria-controls="profileNavigation" aria-expanded="false" aria-label="@T["Toggle navigation"]">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="profileNavigation">
                @await DisplayAsync(Model.Navigation)
            </div>
        </div>
    </nav>
}

@if (Model.Body != null)
{
    var returnUrl = Context.Request.Query["ReturnUrl"];

    <div class="card bg-light mb-3">
        @if (!String.IsNullOrEmpty(returnUrl))
        {
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-3 border-bottom">
                    <li class="breadcrumb-item active" aria-current="page">
                        <a href="@returnUrl"><i class="fas fa-angle-double-left"></i> @T["Back"]</a>
                    </li>
                </ol>
            </nav>
        }

        <div class="card-body">
            <h3 class="card-title mb-3">@Title.GenerateTitle(null)</h3>
            @await DisplayAsync(Model.Body)
        </div>
    </div>
}
